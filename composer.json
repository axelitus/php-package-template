{
    "name": ":composer_vendor/:composer_package",
    "description": ":package_description",
    "keywords": [
        "norse blue",
        "norse-blue"
    ],
    "type": "library",
    "homepage": "https://github.com/:repo_account/:repo_name",
    "license": "MIT",
    "authors": [
        {
            "name": ":author_name",
            "email": ":author_email",
            "homepage": ":author_url",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "nunomaduro/phpinsights": "^1.14",
        "pestphp/pest": "^0.3",
        "phpstan/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "__Vendor__\\__Package__\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "__Vendor__\\__Package__\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "all": [
            "@format",
            "@coverage",
            "@analyse",
            "@insights"
        ],
        "analyse": "phpstan analyse",
        "analyse:github": "phpstan analyse --error-format=github",
        "coverage": "@test --coverage --coverage-clover=build/coverage.xml --coverage-html=build/coverage",
        "format": "php-cs-fixer fix --allow-risky=yes",
        "insights": "phpinsights --verbose --no-interaction",
        "test": "pest"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/axelitus"
        },
        {
            "type": "other",
            "url": "https://ko-fi.com/axelitus"
        },
        {
            "type": "other",
            "url": "https://www.buymeacoffee.com/axelitus"
        }
    ]
}
